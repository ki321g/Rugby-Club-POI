{{#if superAdmin}}
  {{> admin-menu active="dashboard"}}
{{else}}
  {{>  menu active="dashboard"}}
{{/if}}

<section class="section">
    <h1 class="title page-heading is-3">Edit Game</h1>
  <form method="POST" action="/game/{{club._id}}/updategame/{{game._id}}">
  <table class="table is-fullwidth is-striped is-hoverable is-fullwidth">
    <thead>
      <tr class="is-uppercase">
        <th class="has-text-centered">Home Team</th>
        <th class="has-text-centered">Home Score</th>
        <th class="has-text-centered">Away Score</th>
        <th class="has-text-centered">Away Team</th>        
        <th class="has-text-centered">Time</th>
        <th class="has-text-centered">Game Location</th>
      </tr>
    </thead>
    <tbody>
        <tr>
          <td>
            <div class="field">
              <input class="input" type="text" value="{{game.home}}" name="home">
            </div>
          </td>
          <td>
            <div class="field">
          <input class="input" type="number" value="{{game.homescore}}" name="homescore">
        </div>
          </td>
          <td>
            <div class="field">
          <input class="input" type="number" value="{{game.awayscore}}" name="awayscore">
        </div>
          </td>
          <td>
            <div class="field">
          <input class="input" type="text" value="{{game.away}}" name="away">
        </div>
          </td>
          <td>
            <div class="field">
          <input class="input" type="text" value="{{game.gametime}}" name="gametime">
        </div>
          </td>
          <td>
            <div class="field">
          <input class="input" type="text" value="{{game.gamelocation}}" name="gamelocation">
        </div>
          </td>
        </tr>
    <tr>
      <td colspan="6">
        <div class="buttons is-centered pt-3">
          <button class="button is-primary is-fullwidth is-size-5 p-5"><i class="fas fa-pen-to-square p-3"></i> Update Club</button>  
        </div>  
      </td>
    </tr>
    </tbody>
  </table>    
    
  </form>
</section>
{{#if errors}}
    <ul>
        {{#each errors}}
            <li>{{message}}</li>
        {{/each}}
    </ul>
{{/if}}