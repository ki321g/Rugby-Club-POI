<form class="box" action="/county/{{county._id}}/addclub" method="POST">
  <label>Enter Club Details:</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <input class="input" type="text" placeholder="Club Name" name="name">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Club Address" name="address">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Phone" name="phone">
      </div>
      <div class="field">
        <input class="input" type="email" placeholder="Email" name="email">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Website" name="website">
      </div>
      <div class="field">
        <input class="input" type="number" step=".0000001" placeholder="Latidude" name="latitude">
      </div>
      <div class="field">
        <input class="input" type="number" step=".0000001" placeholder="Longitude" name="longitude">
      </div>
    </div>
  </div>
  <button class="button is-primary">Add CLub</button>
</form>