{{#if superAdmin}}
  {{> admin-menu active="dashboard"}}
{{else}}
  {{>  menu active="dashboard"}}
{{/if}}


<section class="section pt-4">
    <div class="card">
      <h1 class="title page-heading is-3 p-3 mb-0">Edit/Add Club Image</h1>
  {{#if imageExists}}
    <div class="card-image level">
      <div class="level-item">
        <figure class="image mt-2 is-576x408">
          <img src={{club.img}} />
        </figure>
      </div>
    </div>
  {{/if}}
  <div class="card-content">
    <form action="/dashboard/{{club._id}}/uploadimage" method="POST" enctype="multipart/form-data">
      <div id="file-select" class="file has-name is-fullwidth">
        <label class="file-label">
          <input class="file-input" name="imagefile" type="file" name="resume" accept="image/png, image/jpeg" />
          <span class="file-cta">
            <span class="file-icon">
              <i class="fas fa-upload"></i>
            </span>
            <span class="file-label">
              Choose a fileâ€¦
            </span>
          </span>
          <span class="file-name"></span>
        </label>
        <button type="submit" class="button is-info">Upload</button>
      </div>
    </form>
  </div>
</div>
</section>



<script>
  const fileInput = document.querySelector(".file-input"); fileInput.onchange = () => { if (fileInput.files.length > 0) { const fileName = document.querySelector(".file-name");
  fileName.textContent = fileInput.files[0].name; } };
</script>
